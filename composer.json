{
    "name": "opendisk/blade",
    "description": "The standalone version of Laravel's Blade templating engine for use outside of Laravel.",
    "keywords": ["laravel", "blade", "template", "view", "render"],
    "license" : "MIT",
    "authors": [
        {
            "name": "Jens Segers",
            "homepage": "https://github.com/jenssegers/blade"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/view": "^9.0",
        "illuminate/config": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Opendisk\\Blade\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
